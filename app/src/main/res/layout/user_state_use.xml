<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_mainsplash_background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="361dp"
        android:layout_height="43dp"
        android:fontFamily="@font/amita"
        android:layout_marginTop="25dp"
        android:text="@string/intentions"
        android:textColor="@color/greenish"
        android:layout_marginLeft="25dp"
        android:textSize="21sp"
        android:textStyle="bold"
         />

    <Button
        android:id="@+id/request_for_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amita"
        android:layout_marginLeft="25dp"
        android:text="Request for a service"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="125dp"
         />

    <Button
        android:id="@+id/offer_ayena_service_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amita"
        android:layout_marginLeft="25dp"
        android:text="Offer a service"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:layout_marginTop="225dp"
        android:textStyle="bold"
        />

    <ProgressBar
        android:id="@+id/progressBar_intentions"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
         />

</RelativeLayout>