<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_mainsplash_background"
    tools:context=".PhoneNumberReg">

  <TextView
      android:layout_width="370dp"
      android:layout_height="50dp"
      android:text="Please enter your mobile number"
      android:layout_marginTop="55dp"
      android:layout_marginLeft="25dp"
      android:textSize="20sp"/>

  <EditText
      android:layout_width="270dp"
      android:layout_height="50dp"
      android:hint=" +xxx,xxx,xxx"
      android:layout_marginTop="85dp"
      android:background="@color/white"
      android:layout_marginLeft="25dp"
      android:textColor="@color/black"
      android:textColorHint="@color/black"
      android:id="@+id/MobileNumberReg"/>
  <TextView
      android:layout_width="210dp"
      android:layout_height="20dp"
      android:text="Or connect with social"
      android:textColor="@color/hot_pink"
      android:drawableRight="@drawable/ic_arrow_forward"
      android:layout_marginTop="155dp"
      android:layout_marginLeft="25dp"
      android:textAlignment="center"
      android:id="@+id/SocialMediaReg"
      android:textSize="18sp"/>

  <TextView
      android:layout_width="250dp"
      android:layout_height="100dp"
      android:text="By continuing you may recieve an SMS for verification."
      android:layout_marginTop="445dp"
      android:layout_marginLeft="25dp"
      android:textSize="18sp"/>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/proceed"
      android:layout_marginTop="500dp"
      android:layout_marginLeft="25dp"
      android:id="@+id/proceed_mobileReg"
      android:background="@color/greenish"
      android:textColor="@color/black" />
</RelativeLayout>